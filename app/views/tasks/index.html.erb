<h1>タスク一覧</h1>
<% @tasks.each do |task| %>
  <% if task.user == current_user %>
    タスク:<a href="tasks/<%= task.id %>"><%= task.content %></a>, status: <%= task.status %>
    <%= link_to "削除", task_path(task) , method: :delete, data: { confirm: "本当に削除しますか？" } %><br>
    作成者：<%= task.user.name %><br>
  <% end %>
<% end %>

<hr>
<%= link_to "新規タスク作成", new_task_path %>



